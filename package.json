{
  "name": "angular-view",
  "displayName": "angular-view",
  "description": "a new view to show the combined html, css, spec files of one component",
  "version": "0.0.1",
  "publisher": "ms-vscode",
  "engines": {
    "vscode": "^1.51.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:angularView.ShowWorkUnit"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "angularView",
          "name": "Angular View"
        }
      ]
    },
    "commands": [
      {
        "command": "angularView.ShowWorkUnit",
        "title": "AngularView: Show work unit"
      },
      {
        "command": "angularView.RefreshWorkUnit",
        "title": "AngularView: Refresh work unit"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint . --ext .ts,.tsx"
  },
  "devDependencies": {
    "@types/node": "^12.12.0",
    "@types/vscode": "^1.51.0",
    "@typescript-eslint/eslint-plugin": "^4.16.0",
    "@typescript-eslint/parser": "^4.16.0",
    "eslint": "^7.21.0",
    "typescript": "^4.2.2"
  }
}
